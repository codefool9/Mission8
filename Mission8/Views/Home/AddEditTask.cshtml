@using Mission8.Models
@model TaskItem // Link this to the model created by Role #1

@{
    ViewData["Title"] = "Task Form";
}


<div class="container mt-4">
    <h2>@(Model?.TaskId == 0 ? "Add Task" : "Edit Task")</h2>


    <form method="post" asp-action="AddEditTask">
        <input type="hidden" asp-for="TaskId" />


        <div class="form-group mb-3">
            <label asp-for="TaskName" class="form-label">Task Name</label>
            <input asp-for="TaskName" class="form-control" required />
        </div>


        <div class="form-group mb-3">
            <label asp-for="DueDate" class="form-label">Due Date</label>
            <input asp-for="DueDate" type="date" class="form-control" />
        </div>


        <div class="form-group mb-3">
            <label asp-for="Quadrant" class="form-label">Quadrant</label>
            <select asp-for="Quadrant" class="form-select" required>
                <option value="">Select a Quadrant...</option>
                <option value="1">Q1: Urgent & Important</option>
                <option value="2">Q2: Not Urgent & Important</option>
                <option value="3">Q3: Urgent & Not Important</option>
                <option value="4">Q4: Not Urgent & Not Important</option>
            </select>
        </div>


        <div class="form-group mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select">
                <option value="">Select Category...</option>
                @foreach (var c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select>
        </div>


        <div class="form-check mb-3">
            <input asp-for="Completed" class="form-check-input" type="checkbox" />
            <label asp-for="Completed" class="form-check-label">Mark as Completed</label>
        </div>


        <button type="submit" class="btn btn-primary">Save Task</button>
        <a asp-action="Quadrants" class="btn btn-secondary">Cancel</a>
    </form>
</div>
